{
  "compilerOptions": {
    "target": "ES2015",
    "module": "Node16",
    "outDir": "./",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16"
  },
  "include": ["*.ts"],
  "exclude": ["node_modules"]
}
